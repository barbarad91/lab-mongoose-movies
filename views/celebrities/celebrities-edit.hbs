<div class="container">
    <div class="row">
        <div class="col-6">

            <h1>Edit celebrity</h1>
            <form method="POST" action="/celebrities/{{celebrity.id}}">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" class="form-control" id="name" value="{{celebrity.name}}">

                </div>
                <div class="form-group">
                    <label for="occupation">Occupation</label>
                    <input type="text" name="occupation" class="form-control" id="occupation"
                        value="{{celebrity.occupation}}">

                </div>
                <div class="form-group">
                    <label for="catchPhrase">Catch phrase</label>
                    <input type="text" name="catchPhrase" class="form-control" id="catchPhrase"
                        value="{{celebrity.catchPhrase}}">
                </div>
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col"><button type="submit" class="btn btn-dark btn-green">Save</button></div>
                            <div class="col"><a class="btn btn-dark" href="/celebrities">Go back</a></div>
                        </div>
                    </div>

                </div>

            </form>

        </div>
    </div>
</div>